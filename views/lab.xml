<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="lab_tree" model="ir.ui.view">
        <field name="name">lab_tree</field>
        <field name="model">hospital.lab</field>
        <field name="arch" type="xml">
            <tree sample="1">
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
            </tree>
        </field>
    </record>

    <record id="view_lab_kanban" model="ir.ui.view">
        <field name="name">lab</field>
        <field name="model">hospital.lab</field>
        <field name="arch" type="xml">
            <kanban sample="1">
                <field name="doctor_id"/>
                <field name="nurse_id"/>
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="test_type"/>
                <field name="note"/>
                <field name="number"/>
                 <templates>
            <t t-name="kanban-box">
                <div class="oe_kanban_global_click o_res_partner_kanban" style="background-color:#00438a;color:#fff;border-radius:15px;">
                <div class="oe_kanban_details">
                <strong class="o_kanban_record_title oe_partner_heading" style="font-size:16px;">
                    <field name="name" style="display:block;"/>
                </strong>
                    <span style="display:block;">Age:<field name="age" /></span>
                    <span style="display:block;">Address:<field name="note" /></span>
                </div>
                </div>
            </t>
        </templates>
            </kanban>
        </field>
    </record>

    <record id="lab_view_form" model="ir.ui.view">
        <field name="name">lab_view_form</field>
        <field name="model">hospital.lab</field>
        <field name="arch" type="xml">
            <form string="Laboratory">
                <sheet>
                    <group>
                        <group>
                            <field name="doctor_id"/>
                            <field name="nurse_id"/>
                            <field name="test_type"/>
                        </group>
                        <group>
                            <field name="name"/>
                            <field name="age"/>
                            <field name="gender"/>
                            <field name="note"/>
                            <field name="number"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="lab_hospital_action" model="ir.actions.act_window">
        <field name="name">Lab</field>
        <field name="res_model">hospital.lab</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Laboratory
            </p>
        </field>
    </record>

    <menuitem
            id="hospital_lab_root"
            name="Lab"
            parent="menu_hospital_root"
            sequence="50"/>


    <menuitem
            id="hospital_lab"
            name="Covid Test"
            action="lab_hospital_action"
            parent="hospital_lab_root"
            sequence="10"/>
</odoo>