<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="nurse_view_tree" model="ir.ui.view">
        <field name="name">nurse_view_tree</field>
        <field name="model">nurse.hospital</field>
        <field name="arch" type="xml">
            <tree sample="1">
                <field name="nurse_name"/>
                <field name="age"/>
                <field name="gender"/>
            </tree>
        </field>
    </record>

    <record id="view_nurse_kanban" model="ir.ui.view">
        <field name="name">Nurses</field>
        <field name="model">nurse.hospital</field>
        <field name="arch" type="xml">
            <kanban sample="1">
                <field name="nurse_name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="note"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li>
                                        <field name="nurse_name"/>
                                    </li>
                                    <!--                                    <li>-->
                                    <!--                                        <field name="image" widget="image" class="oe_avatar"/>-->
                                    <!--                                    </li>-->
                                    <li>
                                        <field name="age"/>
                                    </li>
                                    <li>
                                        <field name="note"/>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="nurse_view_form" model="ir.ui.view">
        <field name="name">nurse_view_form</field>
        <field name="model">nurse.hospital</field>
        <field name="arch" type="xml">
            <form string="Nurses">
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <group>
                        <field name="nurse_name"/>
                        <field name="gmail_id"/>
                        <field name="age"/>
                    </group>
                    <group>
                        <field name="gender"/>
                        <field name="note"/>
                        <field name="active" invisible="1"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="nurse_hospital_action" model="ir.actions.act_window">
        <field name="name">Nurses</field>
        <field name="res_model">nurse.hospital</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a New Nurse
            </p>
        </field>
    </record>

    <menuitem
            id="hospital_Nurse_root"
            name="Nurses"
            parent="menu_hospital_root"
            sequence="40"/>


    <menuitem
            id="hospital_nurses"
            name="Nurse"
            action="nurse_hospital_action"
            parent="hospital_Nurse_root"
            sequence="10"/>

</odoo>